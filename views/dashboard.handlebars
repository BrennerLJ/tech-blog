<div class="row">
    <div class="text-center mx-auto pt-2 user-name">
        <h2 id="blogName">{{name}}'s Blog</h2>
    </div>
</div>
<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mx-auto text-left mt-5">
                {{#if blogPosts.length}}
                    {{#each blogPosts as |blogPost|}}
                        {{> dashboardPost blogPost}}
                        <br>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>

    {{#if (is_my_page user.id userId)}}
    <div class="container">
        <div class="row text-center">
            <a href="/create"><button class="btn btn-primary mt-5">Make a post...</button></a>
            <br>
            <br>
            <br>
        </div>
    </div>
    {{else}}
    <div class="container">
        <div class="row justify-content-center">
            <p>User hasn't made any posts!</p>
        </div>
    </div>
    {{/if}}
</div>

<script src="/js/dashboard.js"></script>

<h2>Posts</h2>

<section>
{{#if posts.length}}
    {{#each posts as |post|}}
        <h3>{{title}}</h3>
        <strong>{{user.name}}</strong>
        <p>{{content}}</p>
        <p>{{date_created}}</p>
    {{/each}}
{{/if}}
</section>

<form id="input-wrapper">
    <input type="text" id="title" value="Title"><br><br>
    <textarea id="new-post" name="post">
        Post Here
    </textarea>
    <input id="submit-post" type="submit" value="Submit">
</form>

<script src="./js/handlePost.js"></script>
